# Auto-detect text files and normalize line endings to LF on checkin
* text=auto

# Force LF for shell scripts (in case any are kept)
*.sh text eol=lf

# Force LF for source code files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf
*.html text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.lock text eol=lf

# Force LF for config files
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
.eslintrc text eol=lf
.prettierrc text eol=lf
*.config.js text eol=lf
*.config.ts text eol=lf

# Binary files (do not normalize)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.svg binary
*.mp4 binary
*.webm binary
*.ogg binary
*.mp3 binary
*.wav binary
*.flac binary
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary
*.zip binary
*.tar binary
*.gz binary
*.rar binary
*.7z binary
*.pdf binary
*.glb binary
*.gltf binary
*.hdr binary
