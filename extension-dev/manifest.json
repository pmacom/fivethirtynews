{
  "manifest_version": 3,
  "name": "530 News (DEV)",
  "version": "0.1.0",
  "description": "[DEVELOPMENT] Collaboratively tag and organize social media content",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://www.youtube.com/*",
    "https://m.youtube.com/*",
    "https://www.reddit.com/*",
    "https://old.reddit.com/*",
    "https://bsky.app/*",
    "https://discord.com/*",
    "http://localhost:3000/*",
    "http://localhost:3001/*",
    "http://127.0.0.1:3000/*",
    "http://127.0.0.1:3001/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "dist/content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://m.youtube.com/*"
      ],
      "js": [
        "dist/content-youtube.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.reddit.com/*",
        "https://old.reddit.com/*"
      ],
      "js": [
        "dist/content-reddit.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://bsky.app/*"
      ],
      "js": [
        "dist/content-bluesky.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-dev16.png",
      "48": "icons/icon-dev48.png",
      "128": "icons/icon-dev128.png"
    }
  },
  "icons": {
    "16": "icons/icon-dev16.png",
    "48": "icons/icon-dev48.png",
    "128": "icons/icon-dev128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css",
        "dist/*.js",
        "dist/*.js.map"
      ],
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*",
        "https://www.youtube.com/*",
        "https://m.youtube.com/*",
        "https://www.reddit.com/*",
        "https://old.reddit.com/*",
        "https://bsky.app/*"
      ]
    }
  ]
}