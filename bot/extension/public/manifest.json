{
  "manifest_version": 3,
  "name": "530 - Social Media Curator",
  "version": "0.1.0",
  "description": "Collaboratively tag and organize social media content",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://www.youtube.com/*",
    "https://m.youtube.com/*",
    "https://www.reddit.com/*",
    "https://old.reddit.com/*",
    "https://bsky.app/*",
    "http://localhost:3001/*",
    "http://127.0.0.1:3001/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["smart-popover.js", "channel-selector.js", "tagify.min.js", "tagify-integration.js", "tag-hierarchy-modal.js", "content.js"],
      "css": ["smart-popover.css", "channel-selector.css", "tagify.css", "styles.css", "tag-hierarchy-modal.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.youtube.com/*", "https://m.youtube.com/*"],
      "js": ["smart-popover.js", "channel-selector.js", "tagify.min.js", "tagify-integration.js", "tag-hierarchy-modal.js", "content-youtube.js"],
      "css": ["smart-popover.css", "channel-selector.css", "tagify.css", "styles.css", "tag-hierarchy-modal.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.reddit.com/*", "https://old.reddit.com/*"],
      "js": ["smart-popover.js", "channel-selector.js", "tagify.min.js", "tagify-integration.js", "tag-hierarchy-modal.js", "content-reddit.js"],
      "css": ["smart-popover.css", "channel-selector.css", "tagify.css", "styles.css", "tag-hierarchy-modal.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://bsky.app/*"],
      "js": ["smart-popover.js", "channel-selector.js", "tagify.min.js", "tagify-integration.js", "tag-hierarchy-modal.js", "content-bluesky.js"],
      "css": ["smart-popover.css", "channel-selector.css", "tagify.css", "styles.css", "tag-hierarchy-modal.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["https://x.com/*", "https://twitter.com/*", "https://www.youtube.com/*", "https://m.youtube.com/*", "https://www.reddit.com/*", "https://old.reddit.com/*", "https://bsky.app/*"]
    }
  ]
}
